package myStore;

/** @author Table */

import java.util.Scanner;

public class Employees extends Person {

	int employeeNumber;
	double numHours;
	double hourlyPay;

	public Employees(String firstName, String lastName, String phoneNumber, String emailAddress, int employeeNumber, double numHours, double hourlyPay) {
		super(firstName, lastName, phoneNumber, emailAddress);
		this.employeeNumber = employeeNumber;
		this.numHours = numHours;
		this.hourlyPay = hourlyPay;
	}

	public static void main(String[] args) {
			try ( Scanner scanner = new Scanner(System.in) ) {
					System.out.print("Enter name of the store: ");
					String storeName = scanner.nextLine();
					
					System.out.print("How many employees do you have: ");
					int employeeCount = scanner.nextInt();
					scanner.nextLine();
					
					for (int i=1; i<=employeeCount;i++) {
						System.out.print("Enter details for employee "+i+": ");
//						int selectedEmployee = scanner.nextInt();
	//					scanner.nextLine();
						
					}
					
					
					scanner.close();
			}
	}

}
